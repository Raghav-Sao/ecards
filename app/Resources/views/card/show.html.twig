{% extends 'base.html.twig' %}

{% block body %}
    <h1>Card</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>Shape</th>
                <td>{{ card.shape }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ card.size }}</td>
            </tr>
            <tr>
                <th>Eventtype</th>
                <td>{{ card.eventType }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ card.color }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ card.language }}</td>
            </tr>
            <tr>
                <th>Religion</th>
                <td>{{ card.religion }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ card.theme }}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ card.createdBy }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if card.createdAt %}{{ card.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('card_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('card_edit', { 'id': card.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
